!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %title ED Thing

    = stylesheet_link_tag    '//cdnjs.cloudflare.com/ajax/libs/jquery-jgrowl/1.4.1/jquery.jgrowl.min.css'
    = stylesheet_link_tag    'application', media: 'all'
    
    = javascript_include_tag 'application'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery-jgrowl/1.4.1/jquery.jgrowl.min.js'

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js", "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"
    

    = csrf_meta_tags
  %body{data: {notice: flash[:notice]}}
    = render partial: 'application/navbar'
    #content.container-fluid
      = yield
    #footer.container-fluid
      %hr
      .text-center
        &copy;


